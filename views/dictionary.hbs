<div class="container py-4">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {{#if terms}}
      {{#each terms}}
        <div class="col">
          <div class="card h-100 shadow-sm hover-shadow">
            <div class="card-body">
              <span class="badge bg-primary mb-2">{{this.letter}}</span>
              <h5 class="card-title fw-bold">{{this.term}}</h5>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="col-12 text-center">
        <p class="lead text-muted">Termlar mavjud emas</p>
      </div>
    {{/if}}
  </div>
</div>